public class Node {

	private double weight;
	private double bias;
	
	private double total;
	private double numCalc;
	
	public Node() {
		
		weight = Math.random();
		bias = Math.random();
		
		total = 0;
		
	}
	
	public void evaluate(double input) {
		
		total += (weight * input) + bias;
		numCalc++;
		
	}
	
	public double output() {
		double calc = total / numCalc;
		
		total = 0.0;
		numCalc = 0.0;
		
		return Math.tanh(calc);
	}

	public void adjust(double error, double learningRate) {
		
		weight = weight - (learningRate * (error*error/weight));
		
	}
	
}
